@model IList<SimpleRuntimeCache.Models.Item>
@{
    ViewBag.Title = "Home Page";
}

<div>
    <h2>Item</h2>
    <h3>
        @Html.ActionLink("Create New", "Create", "Home")
    </h3>
    <div>
        <table>
            <tr>
                <th>Item Name</th>
                <th>Quantity</th>
                <th></th>
                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ItemName</td>
                    <td>@item.Quantity</td>
                    <td>@Html.ActionLink("Edit", "Edit", "Home", new { id = item.Id }, null)</td>
                    <td>@Html.ActionLink("Delete", "Delete", "Home", new { id = item.Id }, null)</td>
                </tr>

            }
        </table>
    </div>
</div>